func sanitizeForLogging(input string) string {
    // Remove control characters that could corrupt logs
    sanitized := strings.Map(func(r rune) rune {
        if r < 32 || r == 127 { // Control characters
            return -1 // Remove
        }
        return r
    }, input)
    
