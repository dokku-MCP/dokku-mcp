#!/bin/bash
set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${YELLOW}ðŸ” Running pre-commit checks...${NC}"

STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    echo -e "${GREEN}âœ… No Go files modified${NC}"
    exit 0
fi

echo -e "${YELLOW}ðŸ“ Go files to check: $(echo $STAGED_GO_FILES | wc -w)${NC}"

echo -e "${BLUE}ðŸŽ¨ Auto-formatting code...${NC}"
if command -v goimports >/dev/null 2>&1; then
    goimports -w $STAGED_GO_FILES
    echo -e "${GREEN}  âœ“ goimports applied${NC}"
else
    gofmt -w $STAGED_GO_FILES
    echo -e "${GREEN}  âœ“ gofmt applied${NC}"
fi

# Re-stage formatted files
git add $STAGED_GO_FILES

echo -e "${BLUE}ðŸ” Checking syntax...${NC}"
for file in $STAGED_GO_FILES; do
    if ! go run -o /dev/null "$file" 2>/dev/null; then
        if ! gofmt -e "$file" >/dev/null 2>&1; then
            echo -e "${RED}âŒ Syntax error in $file${NC}"
            exit 1
        fi
    fi
done
echo -e "${GREEN}  âœ“ Syntax validated${NC}"

echo -e "${BLUE}ðŸ”Ž Static analysis (go vet)...${NC}"
for file in $STAGED_GO_FILES; do
    if ! go vet "$file" 2>/dev/null; then
        echo -e "${RED}âŒ go vet failed for $file${NC}"
        exit 1
    fi
done
echo -e "${GREEN}  âœ“ go vet passed successfully${NC}"

echo -e "${BLUE}ðŸš« Checking forbidden patterns (Strong Typing)...${NC}"
FORBIDDEN_PATTERNS=(
    "interface{}"
    "any"
    "reflect\."
    "unsafe\."
)

VIOLATIONS_FOUND=false
for file in $STAGED_GO_FILES; do
    for pattern in "${FORBIDDEN_PATTERNS[@]}"; do
        if grep -q "$pattern" "$file"; then
            echo -e "${RED}âŒ Forbidden pattern '$pattern' found in $file${NC}"
            VIOLATIONS_FOUND=true
        fi
    done
done

if [ "$VIOLATIONS_FOUND" = true ]; then
    echo -e "${YELLOW}ðŸ’¡ Use strongly typed interfaces according to project rules${NC}"
    exit 1
fi
echo -e "${GREEN}  âœ“ No forbidden patterns detected${NC}"

if command -v gocyclo >/dev/null 2>&1; then
    echo -e "${BLUE}ðŸ“Š Checking cyclomatic complexity...${NC}"
    COMPLEX_FUNCTIONS=$(gocyclo -over 20 $STAGED_GO_FILES 2>/dev/null || true)
    if [ -n "$COMPLEX_FUNCTIONS" ]; then
        echo -e "${YELLOW}âš ï¸  Functions with complexity > 20:${NC}"
        echo "$COMPLEX_FUNCTIONS"
        echo -e "${YELLOW}ðŸ’¡ Consider refactoring to reduce complexity${NC}"
    else
        echo -e "${GREEN}  âœ“ Cyclomatic complexity acceptable${NC}"
    fi
else
    echo -e "${YELLOW}  â­ï¸  gocyclo not installed, complexity analysis skipped${NC}"
fi

if command -v golangci-lint >/dev/null 2>&1; then
    echo -e "${BLUE}ðŸ” Linting with golangci-lint...${NC}"
    if golangci-lint run $STAGED_GO_FILES 2>/dev/null; then
        echo -e "${GREEN}  âœ“ Linting passed successfully${NC}"
    else
        echo -e "${YELLOW}âš ï¸  Linting warnings detected${NC}"
        echo -e "${YELLOW}ðŸ’¡ Run 'golangci-lint run' for details${NC}"
    fi
else
    echo -e "${YELLOW}  â­ï¸  golangci-lint not installed, advanced linting skipped${NC}"
fi

if command -v gosec >/dev/null 2>&1; then
    echo -e "${BLUE}ðŸ”’ Security analysis with gosec...${NC}"
    PACKAGES=$(for file in $STAGED_GO_FILES; do dirname "$file"; done | sort -u)
    SECURITY_ISSUES=false
    
    for pkg in $PACKAGES; do
        if ! gosec -quiet "$pkg" >/dev/null 2>&1; then
            SECURITY_ISSUES=true
        fi
    done
    
    if [ "$SECURITY_ISSUES" = true ]; then
        echo -e "${YELLOW}âš ï¸  Potential security issues detected${NC}"
        echo -e "${YELLOW}ðŸ’¡ Run 'gosec ./...' for details${NC}"
    else
        echo -e "${GREEN}  âœ“ Security analysis passed${NC}"
    fi
else
    echo -e "${YELLOW}  â­ï¸  gosec not installed, security analysis skipped${NC}"
fi

if command -v dupl >/dev/null 2>&1; then
    echo -e "${BLUE}ðŸ‘¯ Detecting duplicate code...${NC}"
    DUPLICATES=$(dupl -threshold 50 $STAGED_GO_FILES 2>/dev/null || true)
    if [ -n "$DUPLICATES" ]; then
        echo -e "${YELLOW}âš ï¸  Duplicate code detected:${NC}"
        echo "$DUPLICATES"
        echo -e "${YELLOW}ðŸ’¡ Consider refactoring to eliminate duplication${NC}"
    else
        echo -e "${GREEN}  âœ“ No duplicate code detected${NC}"
    fi
else
    echo -e "${YELLOW}  â­ï¸  dupl not installed, duplicate detection skipped${NC}"
fi

echo -e "${BLUE}ðŸ§ª Testing modified packages...${NC}"
PACKAGES=$(for file in $STAGED_GO_FILES; do dirname "$file"; done | sort -u)

TEST_FAILURES=false
for pkg in $PACKAGES; do
    if [ -f "$pkg"/*_test.go ]; then
        if ! go test -short "./$pkg" >/dev/null 2>&1; then
            echo -e "${YELLOW}âš ï¸  Tests failed for $pkg${NC}"
            TEST_FAILURES=true
        fi
    fi
done

if [ "$TEST_FAILURES" = true ]; then
    echo -e "${YELLOW}ðŸ’¡ Run 'make test' for details${NC}"
else
    echo -e "${GREEN}  âœ“ All tests pass${NC}"
fi

echo -e "\n${GREEN}âœ… All pre-commit checks completed!${NC}"
echo -e "${GREEN}ðŸš€ Thanks for contributing!${NC}"

# Display suggested tools if not installed
MISSING_TOOLS=()
command -v gocyclo >/dev/null 2>&1 || MISSING_TOOLS+=("gocyclo")
command -v golangci-lint >/dev/null 2>&1 || MISSING_TOOLS+=("golangci-lint")
command -v gosec >/dev/null 2>&1 || MISSING_TOOLS+=("gosec")
command -v dupl >/dev/null 2>&1 || MISSING_TOOLS+=("dupl")

if [ ${#MISSING_TOOLS[@]} -gt 0 ]; then
    echo -e "\n${BLUE}ðŸ’¡ Suggested tools for complete analysis:${NC}"
    for tool in "${MISSING_TOOLS[@]}"; do
        echo -e "   ${YELLOW}$tool${NC}"
    done
    echo -e "${BLUE}   Run 'make install-tools' to install them${NC}"
fi

exit 0 